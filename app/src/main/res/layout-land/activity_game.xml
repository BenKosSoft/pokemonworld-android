<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.sabanciuniv.cs310.pokemonworld.GameActivity"
    android:background="@drawable/game">

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/profile"
        android:id="@+id/btn_profile"
        android:onClick="goProfile"
        android:background="#f41111"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/singlePlayer"
        android:id="@+id/btn_single"
        android:layout_below="@+id/btn_profile"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="45dp"
        android:onClick="goMapPage"
        android:background="#f41111"
        android:textStyle="bold"
        android:textColor="#000000" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/onlineGame"
        android:id="@+id/btn_online"
        android:layout_below="@+id/btn_single"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="45dp"
        android:onClick="goOnline"
        android:background="#f41111"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/welcomeMessage"
        android:id="@+id/tvWelcome"
        android:layout_below="@+id/btn_profile"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="200dp"
        android:layout_marginEnd="200dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:text="@string/pokedex"
        android:id="@+id/btnPokedex"
        android:onClick="goPokedex"
        android:background="#f41111"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_below="@+id/btn_single"
        android:layout_alignLeft="@+id/tvWelcome"
        android:layout_alignStart="@+id/tvWelcome"
        />
</RelativeLayout>
